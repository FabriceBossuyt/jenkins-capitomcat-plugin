<%
   f = taglib('/lib/form')
   f.block do
     f.section(:title => 'Deploy Config') do
       f.entry(:title => 'War file',
               :field => 'local_war_file',
               :description => 'The WAR file that will be uploaded to remote tomcat server. ex) /tmp/test-web.war') do
         f.textbox
       end
       f.entry(:title => 'Host to deploy',
               :field => 'remote_hosts',
               :description => 'The application server and user that you want to deploy. ex) deploy@dev01,deploy@dev02') do
         f.textbox
       end
       f.entry(:title => 'Parallel Mode',
               :field => 'use_parallel') do
         f.booleanRadio(:field => 'use_parallel', )
       end
       f.entry(:title => 'Show verbose log message',
               :field => 'log_verbose') do
         f.booleanRadio
       end
       f.optionalBlock(:name => 'use_ssh_key_file', :title => 'Select SSH private key file', :field => 'use_ssh_key_file', :inline => true) do
         f.entry(:title => 'SSH private key file path',
                 :field => 'ssh_key_file',
                 :description => 'ex) /home/user/.ssh/id_rsa') do
           f.textbox
         end
       end
       f.optionalBlock(:name => 'use_context_update', :title => 'Use Context updating', :field => 'use_context_update', :inline => true) do
         f.entry(:title => 'Context path',
                 :field => 'tomcat_context_name',
                 :description => 'Context name of application. ex) test-web') do
           f.textbox
         end
         f.entry(:title => 'Context path',
                 :field => 'tomcat_context_path',
                 :description => 'Context path name of application. ex) /test-web') do
           f.textbox
         end
         f.entry(:title => 'Context docBase(WAR file path)',
                 :field => 'tomcat_doc_base',
                 :description => 'The path name to the web application archive file. ex) /var/app/war/test-web-2014-01-11.war, /var/lib/tomcat7/webapps/test-web.war') do
           f.textbox
         end
       end
     end

     f.section(:title => 'Tomcat Server Information') do
       f.entry(:title => 'Tomcat Home',
               :field => 'tomcat_home',
               :description => 'Port number of Tomcat server. this value is needed to check whether Tomcat process is running.') do
         f.textbox
       end
       f.entry(:title => 'Tomcat user name',
               :field => 'tomcat_user',
               :value => 'tomcat',
               :description => 'The owner of Tomcat home directory.') do
         f.textbox
       end
       f.entry(:title => 'Tomcat group name',
               :field => 'tomcat_user_group',
               :value => 'tomcat',
               :description => 'The group of Tomcat home directory.') do
         f.textbox
       end
       f.entry(:title => 'Tomcat Command',
               :field => 'tomcat_cmd',
               :value => 'localhost',
               :description => 'Tomcat command. for example, /etc/init.d/tomcat or /your/tomcat/home/bin/catalina.sh can be used. please make sure not to include start or stop parameter.') do
         f.textbox
       end
       f.entry(:title => 'Use tomcat user for tomcat command',
               :field => 'use_tomcat_user_cmd') do
         f.booleanRadio
       end
       f.advanced do
         f.entry(:title => 'Engine name',
                 :field => 'tomcat_engine',
                 :description => 'Port number of Tomcat server. this value is needed to check whether Tomcat process is running.') do
           f.textbox(:value => 'Catalina')
         end
         f.entry(:title => 'Tomcat Virtual Host Name',
                 :field => 'tomcat_vhost',
                 :description => 'Port number of Tomcat server. this value is needed to check whether Tomcat process is running.') do
           f.textbox(:value => 'localhost')
         end
         f.entry(:title => 'AppBase',
                 :field => 'tomcat_app_base',
                 :description => 'Port number of Tomcat server. this value is needed to check whether Tomcat process is running.') do
           f.textbox(:value => 'webapps')
         end
         f.entry(:title => 'Tomcat port number',
                 :field => 'tomcat_port',
                 :description => 'Port number of Tomcat server. this value is needed to check whether Tomcat process is running.') do
           f.textbox(:value => '8080')
         end
       end
     end
   end
%>